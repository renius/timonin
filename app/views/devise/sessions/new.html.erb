<div class="border-form-div">
  <h2><div class="fa fa-compass"></div> Войти</h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Ваш e-mail" %>
    <%= f.password_field :password, class: "form-control", placeholder: "Ваш пароль" %>
    <div class="checkbox">
    <% if devise_mapping.rememberable? -%>
      <label class="checkbox"> <%= f.check_box :remember_me %> Запомнить меня </label>
    <% end -%>
    </div>
    <%= f.submit "Войти", class: "btn btn-large btn-primary" %>
  <% end %>
  
  <div class="shared_links">
    <%= render "devise/shared/links" %>
  </div>  
</div>