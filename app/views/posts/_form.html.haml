.container
  = form_for @post, html: {multipart: :true}  do |f|
    - if @post.errors.any?
      #error_explanation
        %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
        %ul
          - @post.errors.full_messages.each do |msg|
            %li= msg        
    .field
      = f.label :title
      = f.text_field :title
    .field
      = f.label :body
      = f.text_area :body

    = f.fields_for :images do |p|
      .field
        = p.label :photo
      %br
        = p.file_field :photo, :multiple => true, name: "images[photo][]"
    .actions
      = f.submit 'Save'